{
    "version": 3,
    "configurePresets": [
        {
            "name": "_base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "cacheVariables": {
                "BUILD_TESTS": "ON",
                "BUILD_EXAMPLES": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "1"
            }
        },
        {
            "name": "_debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "default",
            "displayName": "Default",
            "inherits": [
                "_base",
                "_debug"
            ]
        },
        {
            "name": "gcc",
            "displayName": "GCC Build",
            "inherits": [
                "_base",
                "_debug"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "clang",
            "displayName": "Clang Build",
            "inherits": [
                "_base",
                "_debug"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-stdlib=libc++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "gcc",
            "configurePreset": "gcc"
        },
        {
            "name": "clang",
            "configurePreset": "clang"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "gcc",
            "configurePreset": "gcc"
        },
        {
            "name": "clang",
            "configurePreset": "clang"
        }
    ]
}
