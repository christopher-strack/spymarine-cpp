{
    "version": 3,
    "configurePresets": [
        {
            "name": "_base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "SPYMARINE_BUILD_TESTS": "ON",
                "SPYMARINE_BUILD_EXAMPLES": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "1"
            }
        },
        {
            "name": "_debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "_release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "inherits": [
                "_base",
                "_debug"
            ]
        },
        {
            "name": "release",
            "displayName": "Release",
            "inherits": [
                "_base",
                "_release"
            ]
        },
        {
            "name": "gcc-debug",
            "displayName": "GCC Debug",
            "inherits": [
                "_base",
                "_debug"
            ],
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "cmake/gcc-toolchain.cmake"
            }
        },
        {
            "name": "gcc-release",
            "displayName": "GCC Release",
            "inherits": [
                "_base",
                "_release"
            ],
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "cmake/gcc-toolchain.cmake"
            }
        },
        {
            "name": "clang-debug",
            "displayName": "Clang Debug",
            "inherits": [
                "_base",
                "_debug"
            ],
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "cmake/clang-toolchain.cmake"
            }
        },
        {
            "name": "clang-release",
            "displayName": "Clang Release",
            "inherits": [
                "_base",
                "_release"
            ],
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "cmake/clang-toolchain.cmake"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "gcc-debug",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "gcc-release",
            "configurePreset": "gcc-release"
        },
        {
            "name": "clang-debug",
            "configurePreset": "clang-debug"
        },
        {
            "name": "clang-release",
            "configurePreset": "clang-release"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "gcc-debug",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "gcc-release",
            "configurePreset": "gcc-release"
        },
        {
            "name": "clang-debug",
            "configurePreset": "clang-debug"
        },
        {
            "name": "clang-release",
            "configurePreset": "clang-release"
        }
    ]
}
